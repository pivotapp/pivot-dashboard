include ./includes/index

ul.accordion(data-hyper="app.bandits")
  section(data-ng-repeat="bandit in bandits")
    input(type="checkbox", id="{{bandit.href}}", hidden="")
    header
      label.title(for="{{bandit.href}}", data-hyper-bind="bandit.name")
      +toggle("bandit.href")
      i.close.fa.fa-times
    ul(data-hyper="bandit.arms")
      li(data-ng-repeat="arm in arms")
        span.name(data-hyper-bind="arm.name")
        +toggle("arm.href")
        i.close.fa.fa-times

