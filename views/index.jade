extends layout

block body

  div(data-ng-controller="HyperController")

    div(data-hyper='.header.scripts')
      script(async='async', data-ng-repeat='script in scripts', data-ng-src='{{script.src}}', onload='{{script.onload}}')

    nav.top(data-ng-include, src="'/partials/topnav.jade'")
    .main-container
      nav.side(data-ng-include, src="'/partials/sidenav.jade'")
      main(data-ng-view="")
    footer(data-ng-include, src="'/partials/footer.jade'")
