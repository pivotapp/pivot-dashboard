!!! 5
html(data-ng-app='pivot')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title(ng-bind="'Pivot | ' + $root.title") Pivot | #{title}
    meta(name='description', content=description)
    meta(name='author', content='Pivot App, LLC')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')

    block styles
      each style in styles
        link(href=style, rel="stylesheet")

    script.
      if (window.location.hash === '#_=_') window.location.hash = ''; var startTime = Date.now();window.env = !{JSON.stringify(env)};

  body(data-ng-controller="IndexController")
    block body
    block scripts
      each script in scripts
        script(src=script)

    script.
      if (window.metric) metric({'measure': 'page_load_time', val: (Date.now() - startTime), units: 'ms'});
